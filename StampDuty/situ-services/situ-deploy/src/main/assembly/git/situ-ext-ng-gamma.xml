<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>situ-ng</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/ebextensions/gamma/external</directory>
             <outputDirectory>.ebextensions/</outputDirectory>
            <includes>
                <include>/*gamma.config</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/nginx-conf/gamma/ui-config-ext</directory>
             <outputDirectory>ui/conf.d/</outputDirectory>
            <includes>
                <include>/*.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/nginx-conf/gamma/route-config-ext</directory>
             <outputDirectory>proxy/conf.d/</outputDirectory>
            <includes>
                <include>/*.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/gamma/docker-config-ext</directory>
             <outputDirectory>/</outputDirectory>
            <includes>
                <include>/*.json</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>