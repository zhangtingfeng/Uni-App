<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>contractrecapportal-services/contractrecapportal-ng</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/contractrecap-services/contractrecap-framework/src/main/resources/ebextensions/prod/trafservice</directory>
             <outputDirectory>.ebextensions/</outputDirectory>
            <includes>
                <include>/*.config</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/contractrecap-services/contractrecap-framework/src/main/resources/docker-config-trafservice</directory>
             <outputDirectory>/</outputDirectory>
            <includes>
                <include>/*.json</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>