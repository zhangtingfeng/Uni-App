<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>situ-ng</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/ebextensions/alpha/external-nlb</directory>
             <outputDirectory>.ebextensions/</outputDirectory>
            <includes>
                <include>/*.config</include>
            </includes>
        </fileSet>
		<fileSet>
            <directory>${project.basedir}/situ-services/situ-deploy/src/main/resources/alpha/docker-config-ext-nlb</directory>
             <outputDirectory>/</outputDirectory>
            <includes>
                <include>/*.json</include>
            </includes>
        </fileSet>
	</fileSets>
	<files>
        <file>
            <source>../../situ-frontend/situ-ui/src/main/angular/situ/dist/situ/assets/app.config-alpha-ext.json</source>
            <outputDirectory>situssl/assets/</outputDirectory>
            <destName>app.config.json</destName>
        </file>
    </files>
</assembly>